# L1tter Backend Environment Configuration

# Database
DATABASE_URL="postgresql://l1tter_user:l1tter_password@localhost:5432/l1tter_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# AI-Enhanced PDF Processing (Free Setup)
ENABLE_AI_EXTRACTION=true
AI_PROVIDER=local
AI_FALLBACK_THRESHOLD=50

# Optional: Paid AI Providers (comment out for free usage)
# AI_PROVIDER=openai
# OPENAI_API_KEY=your-openai-api-key-here

# Optional AI Providers (for future implementation)
# GOOGLE_CLOUD_API_KEY=your-google-cloud-key
# AZURE_COGNITIVE_API_KEY=your-azure-key
# AZURE_COGNITIVE_ENDPOINT=your-azure-endpoint

# Server Configuration
PORT=3001
NODE_ENV=development
